@model CommunityGardenProj.Models.Answers

@{
    ViewData["Title"] = "AnswerQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Answer Question</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AnswerQuestion">
            @Html.HiddenFor(Model => Model.QuestionId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for-"AnswerId" />
            <div class="form-group">
                <label asp-for="QuestionAnswer" class="control-label"></label>
                <input asp-for="QuestionAnswer" class="form-control" />
                <span asp-validation-for="QuestionAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Answer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
